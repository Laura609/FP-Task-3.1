<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style TargetType="Border" x:Key="BorMain">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Margin" Value="0 5 0 0"></Setter>
    </Style>

    <Style TargetType="Border" x:Key="BorderTask">
        <Setter Property="Width" Value="350"/>
        <Setter Property="Height" Value="100"/>
        <Setter Property="Margin" Value="0 140 0 0"/>
        <Setter Property="Background" Value="#3E509C"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="BorderBrush" Value="#3E509C"/>
        <Setter Property="BorderThickness" Value="10 10 10 10"/>
    </Style>


    <Style TargetType="Border"  x:Key="BorderInput">
        <Setter Property="Width" Value="350"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0 100 0 0"/>
        <Setter Property="Background" Value="#3E509C"/>
        <Setter Property="CornerRadius" Value="15"/>
    </Style>
</ResourceDictionary>