<Page x:Class="ML_Task_3.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ML_Task_3.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="460"
    d:DesignWidth="800"
    mc:Ignorable="d"
    Title="MainPage">

    <Border Padding="10"
            CornerRadius="15"
            Background="#303285">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>


            <StackPanel VerticalAlignment="Top" Height="450" Width="100" Margin="0,0,680,0" Grid.RowSpan="2" Background="#4E51D8">
                <Button Content="1"
                        Style="{StaticResource BtnMain}"
                        MouseDown="Border_MouseDown1"></Button>
                <Button Content="2"
                        Style="{StaticResource BtnMain}"
                        MouseDown="Border_MouseDown2"></Button>
                <Button Content="3"
                        Style="{StaticResource BtnMain}"
                        MouseDown="Border_MouseDown3"></Button>
                <Button Content="4"
                        Style="{StaticResource BtnMain}"
                        MouseDown="Border_MouseDown4"></Button>
                <Button Content="5"
                        Style="{StaticResource BtnMain}"
                        MouseDown="Border_MouseDown5"></Button>
                <Button Content="6"
                        Style="{StaticResource BtnMain}"
                        MouseDown="Border_MouseDown6"></Button>
                <Button Content="7"
                        Style="{StaticResource BtnMain}"
                        MouseDown="Border_MouseDown7"></Button>
                <Button Content="8"
                        Style="{StaticResource BtnMain}"
                        MouseDown="Border_MouseDown8"></Button>
                <Button Content="9"
                        Style="{StaticResource BtnMain}"
                        MouseDown="Border_MouseDown9"></Button>
                <Button Content="10"
                        Style="{StaticResource BtnMain}"
                        MouseDown="Border_MouseDown10"></Button>
                <Button Content="11"
                        Style="{StaticResource BtnMain}"
                        MouseDown="Border_MouseDown11"></Button>
            </StackPanel>
        </Grid>
    </Border>
</Page>
